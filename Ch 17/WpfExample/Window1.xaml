<Window x:Class="WpfExample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="520" Width="449">
    <StackPanel>
        <Grid Height="300" Width="300" Name="PanelOne">
            <Button Height="23" Margin="30,30,91,0" Name="button1" VerticalAlignment="Top" >Button</Button>
            <CheckBox Height="16" Margin="30,60,48,0" Name="checkBox1" VerticalAlignment="Top">CheckBox</CheckBox>
            <ComboBox Margin="30,90,27,0" Name="comboBox1" Height="23" VerticalAlignment="Top" />
            <TextBox HorizontalAlignment="Left" Margin="30,120,0,0" Name="textBox1" Width="120" Height="24" VerticalAlignment="Top" />
            <RadioButton HorizontalAlignment="Left" Margin="30,150,0,0" Name="radioButton1" Width="120" Height="16" VerticalAlignment="Top">RadioButton</RadioButton>
            <Slider HorizontalAlignment="Left" Margin="30,180,0,0" Name="slider1" Width="100" Height="22" VerticalAlignment="Top" />
            <Label Margin="30,210,144,0" Name="label1" Height="28" VerticalAlignment="Top">Label</Label>
        </Grid>
        <StackPanel>
            <Button Click="btnDisable_Click">Disable</Button>
            <Button Click="btnEnable_Click">Enable</Button>
            <Button Click="btnSetText_Click">Set Text</Button>
        </StackPanel>
    </StackPanel>
</Window>
